#include "monty.h"

void push(stack_t **stack, unsigned int line_number)
{
	stack_t *newnode;
	/* check if the int data exists*/
	if (data == NULL)
	{
		fprintf(stderr, "L%d: Error: malloc failed\n", line_number);
		exit(EXIT_FAILURE);
	}
	/* create a newnode and allocate memory */
    newnode = (stack_t *)malloc(sizeof(stack_t));
    if (newnode == NULL)
    {
        fprintf(stderr, "L%d: Error: malloc failed\n", line_number);
        exit(EXIT_FAILURE);
    }

    newnode->n = atoi(data);
    newnode->prev = NULL;

    if (*stack == NULL)
    {
        newnode->next = NULL;
    }
    else
    {
        newnode->next = *stack;
        (*stack)->prev = newnode;
    }

    *stack = newnode;
}
